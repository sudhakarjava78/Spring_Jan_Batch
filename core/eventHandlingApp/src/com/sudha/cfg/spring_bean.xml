<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="hello" class="com.sudha.HelloBean">
		<property name="uname" value="Sudhakar" />
	</bean>
	<bean id="contextRefreshedEvent" class="com.sudha.ContextRefreshedListenerImpl" />
	<bean id="contextStartedEvent" class="com.sudha.ContextStartedListenerImpl" />
	<bean id="contextStoppedEvent" class="com.sudha.ContextStoppedListenerImpl" />
	<bean id="contextClosedEvent" class="com.sudha.ContextClosedListenerImpl" />
</beans>